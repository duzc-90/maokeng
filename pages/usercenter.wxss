/* pages/usercenter.wxss */

.page-usercenter {
}
.avatar{
  background-color: #FFC999;
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #666;
  margin-top: 15rpx;
}
.useritem{
  width: 100%;
  padding: 10rpx;
  background-color: #eee;
  font-size: 1rem;
  padding-left: 20rpx;
}
.useritem::after {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  right: 45rpx;
  border-bottom: 1rpx solid #9caec5;
  border-right: 1rpx solid #9caec5;
  transform-origin: center center;
  transform: rotate(-45deg) translateY(20rpx);
  content: ''
}
.useritem +.useritem {
  border-top: #ccc solid 1rpx;
}